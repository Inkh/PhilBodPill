@model PhilBodPill.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<form method="post">

    <label asp-for="UID"></label>
    <input asp-for="UID" />
    <span asp-validation-for="UID"></span>

    <label asp-for="FirstName"></label>
    <input asp-for="FirstName" />
    <span asp-validation-for="FirstName"></span>

    <label asp-for="LastName"></label>
    <input asp-for="LastName" />
    <span asp-validation-for="LastName"></span>


    <label asp-for="UserEmail"></label>
    <input asp-for="UserEmail" />
    <span asp-validation-for="UserEmail"></span>


    <label asp-for="UserStreet"></label>
    <input asp-for="UserStreet" />
    <span asp-validation-for="UserStreet"></span>

    <label asp-for="UserZip"></label>
    <input asp-for="UserZip" />
    <span asp-validation-for="UserZip"></span>

    <label asp-for="UserState"></label>
    <input asp-for="UserState" />
    <span asp-validation-for="UserState"></span>

    <label asp-for="City"></label>
    <input asp-for="City" />
    <span asp-validation-for="City"></span>

    <label asp-for="Password"></label>
    <input asp-for="Password" />
    <span asp-validation-for="Password"></span>


    <label asp-for="ConfirmPassword"></label>
    <input asp-for="ConfirmPassword" />
    <span asp-validation-for="ConfirmPassword"></span>


    <button type="submit">Register!</button>

</form>